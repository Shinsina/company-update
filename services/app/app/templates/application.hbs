<div class="sticky-top z-depth-1-half">
  <nav class="navbar navbar-expand navbar-dark bg-dark">
    <span class="navbar-brand">
      {{#if config.logoUrl}}
        <img
          src={{ config.logoUrl }}
          class="navbar-brand__logo"
          alt="Publisher Logo"
        >
      {{else}}
        {{ i18n config.lang 'contentPortalLabel' }}
      {{/if}}
    </span>
    <div class="navbar-nav mr-auto">
      {{outlet "nav"}}
    </div>
    <ul class="navbar-nav ml-auto">
      {{#if config.contactUrl}}
        <li class="nav-item">
          <a href={{ config.contactUrl }} target="_blank" rel="noopener" class="nav-link">
            {{config.contactText}}
          </a>
        </li>
      {{/if}}
      {{#if session.isAuthenticated}}
        {{#link-to "list" class="nav-item nav-link"}}List{{/link-to}}
        {{#link-to "logout" class="nav-item nav-link"}}Log out{{/link-to}}
      {{/if}}
    </ul>
  </nav>
  {{loading-progress class="bg-dark" progressBackground="bg-success"}}
</div>

<div id="notification-wrapper">
  {{notification-container position="top-right"}}
</div>

<div class="container my-3">
  <div class="row">
    <div class="col">
      {{outlet}}
    </div>
  </div>
</div>
