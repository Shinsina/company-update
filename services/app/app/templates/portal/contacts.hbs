<div class="card mb-4">
  <div class="card-body">
    <p class="lead">Review your company's contacts.</p>
    <p>Make any needed changes on the fields below.</p>
    <p>When you are finished making changes, click the "Save Changes" button.</p>
  </div>
</div>

<form {{action "showModal" on="submit"}}>

  <div class="row">
    {{#each contacts as |contact|}}
      {{contact-card
        contact=contact
        onRemove=(action "remove" contact)
        onUpdate=(action "update" contact)
        onReset=(action "reset" contact)
      }}
    {{/each}}
  </div>

  <button type="button" class="btn btn-primary" {{action "add" }}>
    {{entypo-icon "circle-with-plus"}} Add a contact
  </button>

  <div class="fixed-bottom fixed-right card">
    <div class="card-body">
      <button disabled={{isSubmitDisabled}} class="btn btn-success pull-right" type="submit">
        {{entypo-icon "save"}} Save Changes
      </button>
    </div>
  </div>
</form>

{{submit-modal/contacts
  isOpen=isModalOpen
  hash=hash
  payload=payload
  onComplete=(action "transitionToPortal")
}}
