<div class="card mb-4">
  <div class="card-body">
    <p class="lead">Select your leadership categories.</p>
    <p>For each section below, select the leadership categories your company should be featured in. You may select up to <code>{{ config.leadershipSectionMax }}</code> categories per section.</p>
    <p>{{ i18n "companyDetailsP3Label"}}</p>
  </div>
</div>

<div class="row">
  {{#if config.leadershipPrimarySiteOnly}}
    {{leadership/site site=model onUpdate=(action "update")}}
  {{else}}
    {{#each (get-edge-nodes this "model") as |site|}}
      {{#if site.sections.edges.length}}
        {{leadership/site site=site onUpdate=(action "update")}}
      {{/if}}
    {{/each}}
  {{/if}}
</div>

<div class="fixed-bottom fixed-right card">
  <div class="card-body">
    <button disabled={{submitDisabled}} class="btn btn-success pull-right" {{ action "showModal" }}>
      {{entypo-icon "save"}} {{ i18n "saveChangesLabel"}}
    </button>
  </div>
</div>
{{submit-modal/categories
  hash=hash
  isOpen=isModalOpen
  categories=categories
  onComplete=(action "transitionToPortal")
}}
