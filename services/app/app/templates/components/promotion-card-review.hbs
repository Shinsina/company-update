<div class="card mb-3 h-100">
  <h6 class="card-header card-header--flexed">
    {{entypo-icon "user"}}
    {{#if isNew}}
      <span class="text-{{if isCardEnabled "success" "danger"}}">Added promotion</span>
    {{else if isDeleted}}
      <span class="text-{{if isCardEnabled "success" "danger"}}">Removed promotion</span>
    {{else}}
      <span class="text-muted">Existing promotion</span>
    {{/if}}
    {{#if canToggleCard}}
      <button disabled={{disabled}} class="btn btn-sm {{if isCardEnabled "border-success" "border-danger"}}" {{action "toggleCard"}}>
        {{entypo-icon (if isCardEnabled "check" "cross") class=(if isCardEnabled "text-success" "text-danger")}}
      </button>
    {{else}}
      <button disabled="disabled" class="btn btn-sm btn-disabled">
        {{entypo-icon (if isCardEnabled "check" "cross") }}
      </button>
    {{/if}}
  </h6>
  <div class="card-body">
    <div class="row">
      <div class="col-12 col-md-6">
        {{#if canToggleCard}}
          {{review-field
            original=original.primaryImage.src
            updated=updated.primaryImage.src
            fieldKey="logo"
            enabled=payload.fields.primaryImage
            _approvable=false
          }}
        {{else}}
          {{review-field
            original=original.primaryImage.src
            updated=updated.primaryImage.src
            toggleField=(action "toggleField" "primaryImage")
            fieldKey="logo"
            enabled=payload.fields.primaryImage
          }}
        {{/if}}
      </div>
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for={{ concat this.elementId "-first-name-input" }}>{{ i18n "textLinkLabel"}}</label>
          {{#if canToggleCard}}
            {{review-field
              original=original.linkText
              updated=updated.linkText
              fieldKey="linkText"
              enabled=payload.fields.linkText
              _approvable=false
            }}
          {{else}}
            {{review-field
              original=original.linkText
              updated=updated.linkText
              toggleField=(action "toggleField" "linkText")
              fieldKey="linkText"
              enabled=payload.fields.linkText
            }}
          {{/if}}
        </div>
        <div class="form-group">
          <label for={{ concat this.elementId "-last-name-input" }}>Link URL</label>
          {{#if canToggleCard}}
            {{review-field
              original=original.linkUrl
              updated=updated.linkUrl
              fieldKey="linkUrl"
              enabled=payload.fields.linkUrl
              _approvable=false
            }}
          {{else}}
            {{review-field
              original=original.linkUrl
              updated=updated.linkUrl
              toggleField=(action "toggleField" "linkUrl")
              fieldKey="linkUrl"
              enabled=payload.fields.linkUrl
            }}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer"></div>
</div>
