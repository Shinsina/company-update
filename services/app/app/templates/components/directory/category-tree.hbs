<div class={{ rootClass }}>
  <label role="button" class="d-flex align-items-center" {{action "collapse"}}>
    {{#if (node.children.length && !collapsed) }}
      {{entypo-icon "chevron-down" class="mr-2"}}
    {{else if (node.children.length && collapsed) }}
      {{entypo-icon "chevron-right" class="mr-2"}}
    {{else}}
      <Input
        @type="checkbox"
        class="mr-2"
        @checked={{this.checked}}
        @change={{action "update"}}
      />
    {{/if}}
    {{ node.name }}
  </label>
  {{#if node.children.length && !collapsed }}
    <div class="ml-3">
      {{#each node.children as |child|}}
        {{directory/category-tree
          node=child
          selectedIds=selectedIds
          onUpdate=onUpdate
        }}
      {{/each}}
    </div>
  {{/if}}
</div>
