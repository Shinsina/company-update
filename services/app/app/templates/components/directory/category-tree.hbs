<div class={{ rootClass }}>
  <label class="d-flex align-items-center">
    {{#if node.children.length }}
      {{entypo-icon "chevron-down" class="mr-2"}}
    {{else}}
      <Input
        @type="checkbox"
        class="mr-2"
        @checked={{this.checked}}
        {{action "update"}}
      />
    {{/if}}
    {{ node.name }}
  </label>
  {{#if node.children.length }}
    <div class="ml-3">
      {{#each node.children as |child|}}
        {{directory/category-tree
          node=child
          selectedIds=selectedIds
          onUpdate=onUpdate
        }}
      {{/each}}
    </div>
  {{/if}}
</div>
