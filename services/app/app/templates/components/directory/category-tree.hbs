{{!-- @todo animate! --}}
<div class="category m-3 border-black">
  {{#if canSelect}}
    <label>
      <input type="checkbox" class="mr-2"> {{ node.name }}
    </label>
  {{else}}
    <label {{action "collapse"}}>
      {{#if collapsed}}
        {{entypo-icon "chevron-right" class="mr-2"}}
      {{else}}
        {{entypo-icon "chevron-down" class="mr-2"}}
      {{/if}}
      {{ node.name }}
    </label>
  {{/if}}
  {{#unless collapsed}}
    <div class="border">
      {{#each node.children as |secondary|}}
        {{directory/category-tree node=secondary}}
      {{/each}}
    </div>
  {{/unless}}
</div>
