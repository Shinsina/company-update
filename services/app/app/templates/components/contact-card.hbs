<div class="card mb-3">
  <h6 class="card-header text-right">
    {{confirm-button
      icon="cross"
      label=""
      runningLabel="..."
      class="btn-danger btn-sm"
      iconClass=""
      disabled=isDisabled
      isRunning=isDiscarding
      onConfirm=(action "remove")
    }}
  </h6>
  <div class="card-body">
    <div class="row">
      <div class="col-12 col-md-6">
        {{ upload-image image=_contact.primaryImage.src onUpload=(action "onUpload")}}
      </div>
      <div class="col-12 col-md-6">
        <div class="form-group">
          <label for={{ concat this.elementId "-first-name-input" }}>{{ i18n "firstNameLabel"}}</label>
          <div class="input-group">
            {{input
              type="text"
              class="form-control"
              id=(concat this.elementId "-first-name-input")
              aria-describedby="first-name-help"
              value=_contact.firstName
              focusOut=(action "onChange" "firstName")
              required=true
            }}
          </div>
        </div>
        <div class="form-group">
          <label for={{ concat this.elementId "-last-name-input" }}>{{ i18n "lastNameLabel"}}</label>
          <div class="input-group">
            {{input
              type="text"
              class="form-control"
              id=(concat this.elementId "-last-name-input")
              aria-describedby="last-name-help"
              value=_contact.lastName
              focusOut=(action "onChange" "lastName")
              required=true
            }}
          </div>
        </div>
        <div class="form-group">
          <label for={{ concat this.elementId "-title-input" }}>{{ i18n "titleLabel"}}</label>
          <div class="input-group">
            {{input
              type="text"
              class="form-control"
              id=(concat this.elementId "-title-input")
              aria-describedby="title-help"
              value=_contact.title
              focusOut=(action "onChange" "title")
              required=true
            }}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer"></div>
</div>
