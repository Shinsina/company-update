<div class={{ rootClass }}>
  {{#if wasModified}}
    <div class="input-group interactable mb-1" {{action "update"}}>
      <div class="form-control pl-2">
        <span class={{labelClass}}>
          {{#if wasAdded}}
            {{#if checked}}
              {{entypo-icon "check" class="text-success mr-2"}}
            {{else}}
              {{entypo-icon "check" class="text-muted mr-2"}}
            {{/if}}
          {{else}}
            {{#if checked}}
              {{entypo-icon "cross" class="text-danger mr-2"}}
            {{else}}
              {{entypo-icon "cross" class="text-muted mr-2"}}
            {{/if}}
          {{/if}}
          {{ node.name }}
        </span>
      </div>
      <div class="input-group-append">
        <div class="input-group-text">
          {{#if checked}}
            {{entypo-icon "check" class="text-success"}}
          {{else}}
            {{entypo-icon "cross" class="text-danger"}}
          {{/if}}
        </div>
      </div>
    </div>
  {{else}}
    <label class="d-flex align-items-center p-2">
      {{#if node.children.length }}
        {{entypo-icon "chevron-down" class="mr-2"}}
        <span>{{ node.name }}</span>
      {{else}}
        {{#if cChecked}}
          {{entypo-icon "check" class="text-muted mr-2"}}
        {{else}}
          {{entypo-icon "cross" class="text-muted mr-2"}}
        {{/if}}
        <span class="text-muted">{{ node.name }}</span>
      {{/if}}
    </label>
  {{/if}}

  {{#if node.children.length }}
    <div class="ml-3">
      {{#each node.children as |child|}}
        {{directory-review/category-tree
          node=child
          selectedIds=selectedIds
          addedIds=addedIds
          removedIds=removedIds
          contentIds=contentIds
          onUpdate=onUpdate
        }}
      {{/each}}
    </div>
  {{/if}}
</div>
