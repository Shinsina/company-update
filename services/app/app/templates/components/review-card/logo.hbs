<h6 class="card-header">{{ i18n lang "logoLabel"}}</h6>
<form class="card-body">
  <div class="row">
    <div class="form-group col">
      {{review-field
        original=company.primaryImage.src
        updated=submission.payload.logo
        toggleField=toggleField
        fieldKey="logo"
        enabled=payload.logo
      }}
    </div>
  </div>
</form>
<div class="card-footer"></div>
